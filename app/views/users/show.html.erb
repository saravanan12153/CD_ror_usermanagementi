<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <table class="table">
            <h2>User</h2>
            <thead>
                <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email Address</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                <td><%= @user.first_name =%></td>
                <td><%= @user.last_name =%></td>
                <td><%= @user.email_address =%></td>
                </tr>
            </tbody>
        </table>
        <button class="btn btn-default"><a href="/users/<%= @user.id %>/edit">Edit</a></button>
        <% if @flash_messages %>
            <hr>
            <div class="alert alert-success" role="alert"> <%= @flash_messages %></div>
        <% end %>
        <button class="btn btn-default"><a href="/">Back to Home</a></button>
    </div>
    <div class="col-md-2"></div>
</div>
